<idea-plugin>
    <id>com.your.company.unique.plugin.id</id>
    <name>Jscp</name>
    <version>0.8</version>
    <vendor email="04637@163.com" url="https://www.aid.dev">阳光彩虹小白马Plus</vendor>

    <description></description>

    <change-notes></change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0" />

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="dev.aid.jscp.DeployAction" class="dev.aid.jscp.DeployAction" text="jscp"
            description="jscp" icon="/icons/up2.svg">
            <add-to-group group-id="NavBarToolBar" anchor="before"
                relative-to-action="ToolbarRunGroup" />
        </action>
    </actions>
    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="dev.aid.jscp.settings.JscpState" />
        <projectConfigurable parentId="tools" instance="dev.aid.jscp.settings.JscpConfigurable"
            id="dev.aid.jscp.settings.JscpConfigurable" displayName="Jscp Plugin"
            nonDefaultProject="true" />
        <!--<toolWindow id="Jscp" icon="/icons/up2.svg" anchor="bottom"-->
        <!--    factoryClass="com.intellij.execution.dashboard.RunDashboardToolWindowFactory" />-->
        <toolWindow id="Jscp" icon="/icons/up2.svg"
            anchor="bottom" factoryClass="dev.aid.jscp.window.MyToolWindowFactory"/>
    </extensions>
</idea-plugin>